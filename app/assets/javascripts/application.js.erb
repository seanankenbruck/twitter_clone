	    var mapOptions = {
	      zoom: 15,
	      center: myLatlng,
	      scrollwheel: false    
	    }

  		var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

  		//var image = "<%= asset_path 'acorn.png'%>"
